
  <div class="row">
      <div class="span4 offset4">
        <div class="well">
          <legend>Sign in</legend>
            <%= form_tag sessions_path do %>
              <% flash.each do |name, msg| %>
                <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
                  <button type="button" class="close" data-dismiss="alert">Ã—</button><%= msg  %>
                </div>
              <% end %>
              <%= text_field_tag :login, params[:login], :placeholder => "Username", :class => "span3" %>
              <%= password_field_tag :password, nil, :placeholder => "Password", :class => "span3" %>
              <%= submit_tag "Log in", :class => "btn-info btn" %>
              <label><%= link_to "Sign up!", signup_path %></label>
            <% end %>
        </div>
      </div>
  </div>
